<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/outages"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <RelativeLayout
        android:id="@+id/logoArea"
        android:layout_width="fill_parent"
        android:layout_height="55dip"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="@color/grey"
        android:gravity="center_horizontal" >

        <ImageView
            android:id="@+id/onmsLogo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="false"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_margin="4dip"
            android:layout_marginBottom="8dip"
            android:scaleType="center"
            android:src="@drawable/opennms" />
    </RelativeLayout>

    <ProgressBar
        android:id="@+id/busyIndicator"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginTop="146dp" />

    <ListView
        android:id="@+id/outageListView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/navArea"
        android:layout_below="@+id/logoArea" >

    </ListView>

    <RelativeLayout
        android:id="@+id/navArea"
        android:layout_width="match_parent"
        android:layout_height="34dip"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:visibility="invisible" >

        <Button
            android:id="@+id/prevBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:text="@string/navPrev" />

        <Button
            android:id="@+id/nextBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:text="@string/navNext" />

    </RelativeLayout>

</RelativeLayout>